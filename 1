#include<iostream>
#include <time.h>
using namespace std;
int main(){
    int num,guess,n=1;
    srand(time(0));
    num=rand()%100+1;
    do{
        cout << "*****Guess the no. between 1 to 100*****"<< endl;
        
    
    cin>>guess;
    if(guess>num){
        cout<< "Lower no. please"<<endl;
        
    }
    else if (guess<num){
        cout << "Higher no. please" <<endl;
        
    }
    else {
        cout<<"You get it in " << n <<" attempts"<<endl;
    } n++;
    }
    while(guess!=num);
}
